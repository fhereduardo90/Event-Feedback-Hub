<div class="max-w-2xl mx-auto">
  <div class="text-center mb-8">
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Share Your Event Feedback</h1>
    <p class="text-lg text-gray-600">Help others by sharing your experience at recent events</p>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6">
    <%= form_with(model: @feedback, url: feedbacks_path, local: false, class: "space-y-6") do |form| %>
      <% if @feedback.errors.any? %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
          <h4 class="font-bold">Please fix the following errors:</h4>
          <ul class="list-disc list-inside mt-2">
            <% @feedback.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div>
        <%= form.label :event_id, "Select Event", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.select :event_id, 
            options_from_collection_for_select(@events, :id, :name, @feedback.event_id), 
            { prompt: "Choose an event..." }, 
            { class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" } %>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div>
          <%= form.label :user_name, "Your Name", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.text_field :user_name, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>

        <div>
          <%= form.label :user_email, "Your Email", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= form.email_field :user_email, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        </div>
      </div>

      <div>
        <%= form.label :rating, "Rating", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="flex space-x-4">
          <% (1..5).each do |rating| %>
            <label class="flex items-center">
              <%= form.radio_button :rating, rating, class: "sr-only" %>
              <span class="rating-star cursor-pointer text-2xl text-gray-300 hover:text-yellow-400" data-rating="<%= rating %>">â˜…</span>
            </label>
          <% end %>
        </div>
      </div>

      <div>
        <%= form.label :feedback_text, "Your Feedback", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :feedback_text, 
            rows: 4,
            placeholder: "Tell us about your experience at the event...",
            class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div class="flex justify-between items-center">
        <p class="text-sm text-gray-600">
          <%= link_to "View all feedback", feedbacks_path, class: "text-blue-600 hover:text-blue-800" %>
        </p>
        <%= form.submit "Submit Feedback", 
            class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-6 rounded-md transition duration-200" %>
      </div>
    <% end %>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const stars = document.querySelectorAll('.rating-star');
  
  stars.forEach(function(star, index) {
    star.addEventListener('click', function() {
      const rating = parseInt(this.dataset.rating);
      const radioButton = this.previousElementSibling;
      radioButton.checked = true;
      
      // Update star display
      stars.forEach(function(s, i) {
        if (i < rating) {
          s.classList.remove('text-gray-300');
          s.classList.add('text-yellow-400');
        } else {
          s.classList.remove('text-yellow-400');
          s.classList.add('text-gray-300');
        }
      });
    });
    
    star.addEventListener('mouseover', function() {
      const rating = parseInt(this.dataset.rating);
      stars.forEach(function(s, i) {
        if (i < rating) {
          s.classList.add('text-yellow-400');
        }
      });
    });
    
    star.addEventListener('mouseout', function() {
      const checkedRating = document.querySelector('input[name="feedback[rating]"]:checked');
      const currentRating = checkedRating ? parseInt(checkedRating.value) : 0;
      
      stars.forEach(function(s, i) {
        if (i < currentRating) {
          s.classList.remove('text-gray-300');
          s.classList.add('text-yellow-400');
        } else {
          s.classList.remove('text-yellow-400');
          s.classList.add('text-gray-300');
        }
      });
    });
  });
});
</script>
